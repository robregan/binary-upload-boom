<%- include('partials/header') -%>
  <div class="container">
    <%- include('partials/search') -%>
      <div class="d-flex justify-content-between">
        <button class="btn btn-primary"><a href="/profile">New Post</a></button>
        <button class="btn btn-danger"><a href="/logout">Logout</a></button>
      </div>

      <div class="row justify-content-center mt-5">
        <ul class="row list-unstyled">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="col-3 justify-content-between mt-5">
              <a href="/post/<%= posts[i]._id%>">
                <img class="img-fluid card" src="<%= posts[i].image%>">
                <!-- Hardcoded value, as we don't have database with cost field set up just yet -->
                <p>
                  <%= posts[i].title %>
                </p>
                <p>$<%= posts[i].cost %>
                </p>

              </a>
            </li>
            <% } %>
        </ul>
      </div>
  </div>
  <%- include('partials/footer') -%>